<% provide(:title, @category.name + ' - ' + @sector.name) %>
<% provide(:nav_public, 'nav_public_sector') %>
<div class="single-category-public">
  <h2 class="single-category-name-public"><%= @category.name %></h2>
  <%= render 'category_common' %>
  <% if @schedules.any? %>
    <div class="schedules-public">
      <% @category.schedules.each do |schedule| %>
        <div class="schedule-cell-public">
          <div class="schedule-public">
            <div class="schedule-info-public">
              <h3 class="schedule-day-public"><%= schedule.day %></h3>
              <p class="schedule-time-public"><%= schedule.time %></p>
              <p class="schedule-where-public"><%= schedule.where %></p>
            </div>
            <% if !schedule.map.nil? %>
              <div class="schedule-map-public">
                <div class="schedule-google-maps-public">
                  <iframe src="<%= schedule.map %>" width="400" height="300" frameborder="0" style="border:0"></iframe>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
