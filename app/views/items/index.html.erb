<% provide(:title, 'Shop - ' + @sector.name) %>
<% @sector.is_root ? provide(:nav_public, 'nav_public_root') : provide(:nav_public, 'nav_public_sector') %>
<h2 class="page-header-public">IL NOSTRO SHOP</h2>
<%#TODO= render 'posts/sector_select' if @sector.is_root %>
<div class="pagination-div-public"><%= will_paginate @items %></div>
<div class="items-public">
  <% @items.each do |item| %>
    <div class="shop_item-cell-public">
      <div class="shop_item-public">
        <%= link_to raw('<div class="shop_item-img-container-public"><span class="center-img-helper"></span>' + image_tag(item.image.url(:small), class: "img-shop_item-public") + '<div class="shop_item-price-public">
            <span class="shop_item-price-text">Prezzo: </span>'+ item.price + ' â‚¬</div>
            </div>'), 
            sector_item_path(@sector, item), class:"shop_item-img-link-public" %>
