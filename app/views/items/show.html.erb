<% provide(:title, @item.name + ' Dettaglio - ' + @sector.name) %>
<% @sector.is_root ? provide(:nav_public, 'nav_public_root') : provide(:nav_public, 'nav_public_sector') %>
<div class="single-item-public">
  <h2 class="single-item-name-public"><%= @item.name %></h2>
  <div class="single-item-img-public">
    <%= image_tag @item.image.url(:normal), class: "img-single-item-public" %>
    <div class="single-item-price-public">
      <span class="single-item-price-text">Prezzo:
      </span>
      <%= @item.price %>
      â‚¬
    </div>
  </div>
  <%= form_tag sector_item_question_path(@sector, @item), :class => "form-question-item" do %>
    <p>Per ottenere maggiori informazioni riguardo questo articolo, compila il seguente form.</p>
    <div class="form-group">
      <%= label_tag :name, "Nome", class: "question-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :name, nil, class: "form-control", :required => true, placeholder: "Nome" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :surname, "Cognome", class: "question-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :surname, nil, class: "form-control", :required => true, placeholder: "Cognome" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :email, "Email", class: "question-label" %>
      <div class="col-sm-10">
        <%= email_field_tag :email, nil, class: "form-control", :required => true, placeholder: "Email" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :tel, "Telefono", class: "question-label" %>
      <div class="col-sm-10">
        <%= text_field_tag :tel, nil, class: "form-control", :required => true, placeholder: "Telefono" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :question, "Domanda", class: "question-label" %>
      <div class="col-sm-10">
        <%= text_area_tag :question, nil, class: "form-control", rows: 5, :required => true, placeholder: "Scrivi la tua domanda..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox question-checkbox">
          <label>
            <%= check_box_tag :terms_of_service, 'yes', false, 'required' => 'true' %> Autorizzo il trattamento dei miei dati personali, ai sensi del D.lgs. 196 del 30 giugno 2003.
          </label>
        </div>
      </div>
    </div>
    <div class="form-group btn-question">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag 'Invia la domanda', class: "btn-submit-question", onclick: "validateCheckbox();" %>
      </div>
    </div>
  <% end %>
</div>
