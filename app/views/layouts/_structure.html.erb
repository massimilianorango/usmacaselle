<% if params[:controller] == "static_pages" && params[:action] == "ie_compatibility" %>
  <%= yield %>
<% else %>
  <!DOCTYPE html>
  <html>
    <!--[if lt IE 10]>
      <meta HTTP-EQUIV="REFRESH" content="0; url=<%= ie_compatibility_url %>">
    <![endif]-->
    <%= render 'layouts/' + yield(:structure) unless yield(:structure).empty? %>
  </html>
<% end %>
