              <ul class="dropdown-menu">
                <% @sectors.each do |sec| %>
                  <li><%= link_to sec.name, '#' %></li>
                <% end %>
              </ul>
            <% end %>
          </li>
          <%= active_link_to 'News', '#', :wrap_tag => :li %>
          <%= active_link_to 'Shop', '#', :wrap_tag => :li %>
          <%= active_link_to 'La societÃ ', '#', :wrap_tag => :li %>
          <%= active_link_to 'Contatti', '#', :wrap_tag => :li %>
        </ul>
      </div><!--/.public-navbar-collapse -->
    </div>
  </div><!--/.Navbar -->
  <%= render 'layouts/' + yield(:header_bottom) unless yield(:header_bottom).empty? %>
</header>
