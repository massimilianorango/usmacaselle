<% provide(:title, "Upload file") %>
<ol class="breadcrumb">
  <li><%= link_to 'Home', admin_path %></li>
  <li class="active">Upload</li>
</ol>
<% unless params[:uploaded_file_url].nil? %>
  <p>Conserva il seguente link per poter utilizzare il file all'interno del sito:
  </p>
  <div class="input-group">
    <span class="input-group-addon"><strong>Premi CTRL + C per copiare il link.</strong></span>
    <%= text_field_tag :url, params[:uploaded_file_url], class: "form-control", :autofocus => true %>
  </div>
<% end %>
<%= form_tag(admin_files_path, {multipart: true, :class => 'form-center'}) do %>
  <h2>Upload file</h2>
  <%= file_field_tag 'file', :required => true, :autofocus => true %>
  <div class="radio">
    <label><%= radio_button_tag(:type, "docs", :checked => true)%>Documento</label>
  </div>
  <div class="radio">
    <label><%= radio_button_tag(:type, "imgs") %>Immagine</label>
  </div>
  <%= submit_tag "Upload", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
