<% provide(:title, "Login") %>
<% unless @sectors.nil? %>
  <%= form_for(:session, url: admin_sessions_path, html: {:class => 'form-select-input'}) do |f| %>
    <h2>Effettua il login</h2>
    <%= f.collection_select :id, @sectors, :id, :name, {prompt: "Scegli un settore"}, {class: "form-control", :required => true} %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password", :required => true %>
    <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
    <%= link_to "Ho dimenticato la password", new_admin_password_reset_path %>
  <% end %>
<% end %>
