<% provide(:title, "Carousel") %>
<ol class="breadcrumb">
  <li><%= link_to 'Home', admin_path %></li>
  <li class="active">Carousel</li>
</ol>
<div class="page-container">
  <h2 class="page-header">Carousel - slide presenti:
    <%= @sector.slides.count %>
  </h2>
  <p class="alert alert-info">Per ordinare le slide trascinale nella corretta posizione, dopodiché premi
    <strong>"Salva ordinamento"</strong>. Le slide più in alto a sinistra saranno le prime ad essere visualizzate.</p>
  <div class="slide-top-buttons">
    <%= link_to raw('<span class="icon"></span> Nuova slide'), new_admin_slide_path, :class => "btn btn-new" %>
    <%= link_to raw('<span class="icon"></span> Salva ordinamento'), '', :class => "btn btn-save", :id => "btn-order" if @sector.slides.any? %>
    <span class="controller">slides</span>
  </div>
  <% if @sector.slides.any? %>
    <div class="container-fluid">
      <div class="sortable row">
        <%= render @slides %>
      </div>
    </div>
  <% end %>
</div>
