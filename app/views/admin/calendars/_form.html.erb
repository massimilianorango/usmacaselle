<ol class="breadcrumb">
  <li><%= link_to 'Home', admin_path %></li>
  <li><%= link_to 'Categorie', admin_categories_path %></li>
  <li><%= link_to 'Modifica ' + @category.name, edit_admin_category_path(@category) %></li>
  <li><%= link_to 'Calendari', admin_category_calendars_path(@category) %></li>
  <li class="active"><%= yield(:title) %></li>
</ol>
<div class="page-container">
<%= form_for [:admin, @category, @calendar], :html => {role: "form", class: "form-center-full"} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <h2 class="page-header-private"><%= yield(:title) %></h2>
  <div class="alert alert-info">Ricorda di premere il tasto di
    <strong>salvataggio</strong>
    in fondo alla pagina, o le tue modifiche non verranno salvate.</div>
  <div class="form-group">
    <%= f.label :name, 'Nome del calendario' %>
    <%= f.text_field :name, {class: "form-control", :required => true, :autofocus => true, placeholder: "Inserisci il nome del calendario"} %>
  </div>
  <div class="form-group">
    <%= f.label :link, "Link al calendario (opzionale)" %>
    <%= f.text_field :link, {class: "form-control", placeholder: "Inserisci il link al calendario"} %>
    <p class="help-block">Puoi inserire un link al calendario invece di trascrivere le partite una ad una.</p>
  </div>
  <%= f.button(type: 'submit', class: "btn-save btn-final") do %>
    <span class="icon"></span>
    <%= yield(:action) %>
  <% end %>
<% end %>
</div>